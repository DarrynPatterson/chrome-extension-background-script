{
  "manifest_version": 2,
  "name": "Background Script",
  "version": "1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons8-erase-48.png"
  }
}
